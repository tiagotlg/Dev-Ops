pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }


    stage('Pre-Deploy - Security Scan - Image (Trivy)') {
      steps {
        bat '''
        trivy image --exit-code 1 --severity HIGH,CRITICAL ^
          --format table --output trivy-prod-image-report.txt tiagotlg/pratica_ac2:latest
        '''
        archiveArtifacts artifacts: 'trivy-prod-image-report.txt', onlyIfSuccessful: false
      }
    }


    stage('Deploy - Start container (prod)') {
      steps {
        echo 'Starting container from Docker Hub (PROD)...'
        bat 'docker-compose -f docker-compose.prod.yml pull'
        bat 'docker-compose -f docker-compose.prod.yml up -d --no-color'
        sleep time: 60, unit: 'SECONDS'
        bat 'docker-compose -f docker-compose.prod.yml logs'
        bat 'docker-compose -f docker-compose.prod.yml ps'
      }
    }


    stage('Post-Deploy - Smoke Test') {
      steps {
        bat 'curl http://localhost:8585 || echo "Service not responding"'
      }
    }
  }

  post {
    always {
      echo 'Pipeline PROD completed (com gate de seguran√ßa via Trivy).'
    }
  }
}
